# Django Settings
# Copy this file to .env and customize as needed

# Secret key for Django (generate a new one for production!)
# DJANGO_SECRET=your-secret-key-here

# Set to True for production mode (enables PostgreSQL, disables DEBUG)
DJANGO_PROD=False

# Comma-separated list of allowed hosts (required in production)
# DJANGO_ALLOWED_HOSTS=example.com,www.example.com

# Timezone setting
DJANGO_TZ=UTC

# Static files root directory (required in production)
# DJANGO_STATIC_ROOT=/var/www/static

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:5173

# PostgreSQL Database (only used when DJANGO_PROD=True)
# DB_NAME=ansible_ui
# DB_USERNAME=postgres
# DB_PASSWORD=your-password
# DB_HOSTNAME=localhost
# DB_PORT=5432
